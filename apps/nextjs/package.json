{
	"name":            "@acme/nextjs",
	"version":         "0.1.0",
	"private":         true,
	"babelMacros":     {
		"twin": {
			"preset": "emotion",
			"config": "tailwind.config.ts"
		}
	},
	"scripts":         {
		"build":     "pnpm with-env next build",
		"clean":     "git clean -xdf .next .turbo node_modules",
		"dev":       "pnpm with-env next dev -p 3000 & local-ssl-proxy --key ./certificates/localhost-key.pem --cert ./certificates/localhost.pem --source 443 --target 3000",
		"lint":      "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
		"format":    "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
		"start":     "pnpm with-env next start",
		"typecheck": "tsc --noEmit",
		"test":      "jest --watch",
		"test:ci":   "jest --ci",
		"with-env":  "dotenv -e ../../.env --"
	},
	"dependencies":    {
		"@acme/api":                               "^0.1.0",
		"@acme/auth":                              "^0.1.0",
		"@acme/db":                                "^0.1.0",
		"@acme/tailwind-config":                   "0.1.0",
		"@acme/ui":                                "^0.1.0",
		"@acme/validations":                       "0.1.0",
		"@emotion/cache":                          "^11.11.0",
		"@emotion/css":                            "^11.11.2",
		"@emotion/react":                          "^11.11.1",
		"@emotion/server":                         "11.11.0",
		"@emotion/styled":                         "^11.11.0",
		"@fontsource/work-sans":                   "^4.5.14",
		"@hookform/resolvers":                     "^3.3.1",
		"@t3-oss/env-nextjs":                      "^0.7.0",
		"@tanstack/react-query":                   "^4.35.7",
		"@tanstack/react-query-devtools":          "^4.35.7",
		"@tanstack/react-query-next-experimental": "5.0.0-alpha.80",
		"@trpc/client":                            "^10.40.0",
		"@trpc/next":                              "^10.40.0",
		"@trpc/react-query":                       "^10.40.0",
		"@trpc/server":                            "^10.40.0",
		"cookies-next":                            "^4.0.0",
		"immer":                                   "^9.0.19",
		"next":                                    "^13.5.6",
		"react":                                   "^18.2.0",
		"react-dom":                               "^18.2.0",
		"react-hook-form":                         "^7.47.0",
		"react-merge-refs":                        "^2.0.1",
		"react-toastify":                          "^9.1.1",
		"superjson":                               "1.13.1",
		"zod":                                     "^3.22.2"
	},
	"devDependencies": {
		"@acme/eslint-config":      "^0.2.0",
		"@acme/prettier-config":    "^0.1.0",
		"@acme/tailwind-config":    "^0.1.0",
		"@acme/tsconfig":           "^0.1.0",
		"@babel/core":              "^7.22.9",
		"@babel/preset-react":      "^7.22.5",
		"@babel/preset-typescript": "^7.22.5",
		"@emotion/babel-plugin":    "^11.11.0",
		"@iconify/json":            "^2.2.54",
		"@svgr/core":               "^7.0.0",
		"@svgr/plugin-jsx":         "^7.0.0",
		"@types/jest":              "^29.5.5",
		"@types/node":              "^20.4.6",
		"@types/react":             "^18.2.18",
		"@types/react-dom":         "^18.2.7",
		"babel-loader":             "^9.1.3",
		"babel-plugin-macros":      "^3.1.0",
		"dotenv-cli":               "^7.3.0",
		"eslint":                   "^8.50.0",
		"jest":                     "^29.7.0",
		"jest-environment-jsdom":   "^29.7.0",
		"js-yaml-loader":           "^1.2.2",
		"prettier":                 "^3.0.3",
		"tailwindcss":              "3.3.3",
		"tailwindcss-rtl":          "^0.9.0",
		"ts-jest":                  "^29.1.1",
		"twin.macro":               "^3.4.0",
		"typescript":               "^5.1.6",
		"unplugin-icons":           "^0.16.1",
		"yaml-loader":              "^0.8.0"
	},
	"eslintConfig":    {
		"root":    true,
		"extends": [
			"@acme/eslint-config/base",
			"@acme/eslint-config/nextjs",
			"@acme/eslint-config/react"
		]
	},
	"prettier":        "@acme/prettier-config"
}
