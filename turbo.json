{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": [
		"**/.env"
	],
	"pipeline": {
		"topo": {
			"dependsOn": ["^topo"]
		},
		"db:generate": {
			"cache":  false
		},
		"db:push":     {
			"cache":  false
		},
		"db:playground": {
			"cache":  false
		},
		"dev":         {
			"persistent": true,
			"cache":      false
		},
		"start":       {
			"persistent": true,
			"cache":      false
		},
		"build":       {
			"dependsOn": [
				"^build",
				"^db:generate"
			],
			"outputs":   [
				".next/**",
				"!.next/cache/**",
				"next-env.d.ts",
				".expo/**",
				"storybook-static/**"
			]
		},
		"test":        {
			"persistent": true,
			"cache":      false
		},
		"test:ci":     {
			"persistent": true,
			"cache":      false
		},
		"test:watch":  {
			"persistent": true,
			"cache":      false
		},
		"format": {
			"outputs": ["node_modules/.cache/.prettiercache"],
			"outputMode": "new-only"
		},
		"lint":        {
			"dependsOn": [
				"^topo"
			],
			"outputs":   [
				"node_modules/.cache/.eslintcache"
			]
		},
		"typecheck":   {
			"dependsOn": [
				"^topo"
			],
			"outputs":   [
				"node_modules/.cache/tsbuildinfo.json"
			]
		},
		"clean":       {
			"cache": false
		},
		"//#clean":    {
			"cache": false
		},
		"//#clean":    {
			"cache": false
		},
		"type-check":  {
			"dependsOn": [
				"^db:generate"
			],
			"cache":     false
		}
	},
	"globalEnv": [
		"DATABASE_URL",
		"DISCORD_CLIENT_ID",
		"DISCORD_CLIENT_SECRET",
		"NEXTAUTH_SECRET",
		"NEXTAUTH_URL"
	]
}
